<?xml version="1.0" encoding="UTF-8"?>
<document>
  <properties>
    <title>Changelog</title>
    <author email="alex.ruiz.05@gmail.com">Alex Ruiz</author>
  </properties>
  <body>
    <release version="1.0b2" date="2010-07-14" description="Subsequent release">
      <action dev="cedarsoft" type="add">
				Added 'testSourceDirectory' option
      </action>
      <action dev="cedarsoft" type="add">
				Magic classpath extension (with JavaFX jars) made optional
      </action>
      <action dev="cedarsoft" type="fix">
				Improved error messages for paths
      </action>
      <action dev="cedarsoft" type="add">
				Compiler argument added: -Xlint:unchecked
      </action>
      <action dev="cedarsoft" type="add">
				Skipping compilation for non-java projects (e.g. pom)
      </action>
      <action dev="cedarsoft" type="add">
				Added possibility to "override" Java class with JavaFX classes      
      </action>
      <action dev="alexruiz" type="add" issue="FEST-369" due-to="Thomas Butter">
        Allow setting of 'memoryMaxSize'.
      </action>
    </release>
    <release version="1.0b1" date="2010-05-19" description="Subsequent release">
      <action dev="alexruiz" type="add" issue="FEST-314">
        Added goal testCompile to compile JavaFX test sources.
      </action>
      <action dev="alexruiz" type="add">
        Change JDK version to 1.6.
      </action>
      <action dev="alexruiz" type="fix">
        Renamed artifactId to javafxc-maven-plugin. 
      </action>
    </release>
    <release version="1.0a1" date="2010-02-01" description="Subsequent release">
      <action dev="alexruiz" type="fix" issue="FEST-288" due-to="Viktor Hedefalk">
        Rewrote plugin as a Java Mojo. Classworlds' exception is no longer thrown. 
      </action>
      <action dev="alexruiz" type="fix" issue="FEST-289" due-to="Johannes Schneider">
        Output directory is now created if it doesn't exist. 
      </action>
      <action dev="alexruiz" type="fix" issue="FEST-290" due-to="William Billingsley">
        Dependencies declared in POM are now present in the classpath.
      </action>
      <action dev="alexruiz" type="fix" issue="FEST-294" due-to="nicerobot">
        JavaFX home can be set in the POM or in an environment variable.
      </action>
    </release>
    <release version="0.1" date="2009-12-09" description="First public release">
      <action dev="alexruiz" type="add">
        First version of JavaFX Maven plugin, written as an Ant script.
      </action>
    </release>
  </body>
</document>